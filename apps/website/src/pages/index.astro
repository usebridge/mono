---
import Layout from "../layouts/Layout.astro";
import whiteLogo from "../assets/logo-light.svg";
---

<script>
  const today = new Date();

  function updateYear() {
    const year = today.getFullYear();
    const pElement = document.getElementById("ho-solutions");

    if (pElement) {
      pElement.textContent = `HO Solutions ${year}`;
    }
  }

  updateYear();
</script>

<Layout>
  <header class="relative px-4 py-2">
    <div class="flex gap-2 items-center w-fit md:m-8 m-2">
      <img class="w-6 h-6 mx-auto" src={whiteLogo.src} alt="logo" />
      <h1 class="text-lg font-mono text-teal-300">
        use<span class="ml-[2px] text-white">bridge</span>
      </h1>
    </div>
